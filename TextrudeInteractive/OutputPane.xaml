<UserControl x:Class="TextrudeInteractive.OutputPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TextrudeInteractive"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="OutputPane_OnLoaded">
    <DockPanel>

        <DockPanel   DockPanel.Dock="Bottom">
            <Button DockPanel.Dock="Left" FontSize="8" Click="SaveToFile">Save File...</Button>
            <ComboBox Name="FormatSelection" DockPanel.Dock="Right" SelectionChanged="FormatSelection_OnSelectionChanged"
                      HorizontalAlignment="Right" HorizontalContentAlignment="Right" />

        </DockPanel>

        <avalonedit:TextEditor DockPanel.Dock="Top"
                               Foreground="LightSeaGreen"
                               Name="textBox"
                               IsReadOnly="True" />

    </DockPanel>
</UserControl>