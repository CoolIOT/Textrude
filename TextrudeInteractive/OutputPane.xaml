<UserControl x:Class="TextrudeInteractive.OutputPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TextrudeInteractive"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             >
    <DockPanel>

        <DockPanel   DockPanel.Dock="Bottom">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button  Name ="ChooseButton"  Style="{StaticResource MaterialDesignFlatButton}" Click="CopyToClipboard" ToolTip="Copy to clipboard" Content="&#x1F4CB;"/>
                <ComboBox Name="FormatSelection"  SelectionChanged="FormatSelection_OnSelectionChanged"
                          HorizontalAlignment="Right" HorizontalContentAlignment="Right" />

            </StackPanel>

            <local:FileBar x:Name="fileBar" DockPanel.Dock="Left"/>
        </DockPanel>



        <avalonedit:TextEditor DockPanel.Dock="Top"
                               Foreground="LightSeaGreen"
                               Name="textBox"
                               IsReadOnly="True" />

    </DockPanel>
</UserControl>
